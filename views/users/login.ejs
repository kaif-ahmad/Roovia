<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-5 offset-4"><i>Hello, Roovian</i></h1>
    <div class="col-6 offset-3 mt-3 mb-4 login-form">
        <form action="/login" method="POST" class="needs-validation mb-4 mt-4" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>   
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>   
            </div>
            <div class="sl-switch">
                <button class="btn btn-dark form-btn">LOGIN</button>
                <button class="btn btn-dark form-btn"><a href="/signup" class="sl-btn">Become a Roovian</a> </button> 
            </div>
        </form>
    </div>
</div>