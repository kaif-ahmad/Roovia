<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <br>
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="invalid-feedback">Cannot be Blank!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Should be short and filled</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label" >Image Link</label>
            <input type="text" name="listing[image]" value="<%= listing.image.url %>" class="form-control" required>
            <div class="invalid-feedback">Cannot be Blank!</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                <div class="invalid-feedback">Cannot be Blank!</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                <div class="invalid-feedback">Cannot be Blank!</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="invalid-feedback">Cannot be Blank!</div>
        </div>
        <button class="btn btn-dark form-btn">Edit</button>
        <br><br>
    </form>
    </div>
</div>
